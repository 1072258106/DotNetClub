@using DotNetClub.Web.ViewModels.Notice
@model NoticeViewModel

<div class="col-md-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <ol class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">首页</a></li>
                <li>@Model.Title</li>
            </ol>
        </div>
        <div class="panel-body">
            <div class="alert alert-@(Model.Type.ToString().ToLower())">
                @Model.Message
            </div>
        </div>
    </div>
</div>

<div class="col-md-3">
    @await Component.InvokeAsync("LoginInfoPanel")

    @await Component.InvokeAsync("NewTopicPanel")

    @await Component.InvokeAsync("LinksPanel")
</div>
